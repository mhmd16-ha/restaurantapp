@model IEnumerable<SubCategory>

    <div class="whitebg border">
        <div class="row">
            <div class="col-6">
                <h2 class="text-info">Sub Category List</h2>
            </div>
            <div class="col-6 text-right">
                <partial name="_CreateButton" />
            </div>
        </div>
        <div>
            @if (Model.Count() == 0)
            {
            <p class="text-danger">No Sub Category</p>
            }
            else
            {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Category.Name)

                    </th>
                    <th>
                        Operations
                    </th>
                </tr>
                @foreach (var item in Model)
                {
                <tr>
                    <td style="font-size:large">
                        @item.Name
                    </td>
                    <td style="font-size:large">
                        @item.Category.Name
                    </td>
                    <td style="width:150px">
                        <div class="btn-group" role="group">
                            <a asp-action="Details" class="btn btn-success text-white" asp-route-id="@item.Id"><i class="fas fa-list-alt"></i></a>
                            <a asp-action="Edit" class="btn btn-primary text-white" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a>
                            <a asp-action="Delete" class="btn btn-danger text-white" asp-route-id="@item.Id"><i class="fas fa-trash"></i></a>

                        </div>
                    </td>
                </tr>
                }
            </table>
            }
        </div>


    </div>
